# .env.example - Project Aura Configuration

# Project Settings
PROJECT_NAME="Aura"
API_V1_STR="/api/v1"

# Database Settings (PostgreSQL - to be used in Phase 1)
# POSTGRES_SERVER=localhost
# POSTGRES_USER=your_db_user
# POSTGRES_PASSWORD=your_db_password
# POSTGRES_DB=aura_db
# DATABASE_URL=postgresql://your_db_user:your_db_password@localhost/aura_db

# LLM Provider Settings (to be used in Phase 5)
# OPENAI_API_KEY=your_openai_api_key

# Neo4j Settings (to be used in Phase 3)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_neo4j_password

# Celery Broker (Redis/RabbitMQ - to be used in Phase 4)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0